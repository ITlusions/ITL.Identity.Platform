# Environment variables for OIDC authentication
# Save this as: .env.oidc

# Keycloak Configuration
KEYCLOAK_CLIENT_ID=itl-docs-client
KEYCLOAK_CLIENT_SECRET=your-keycloak-client-secret-here
KEYCLOAK_REALM=itl-platform
KEYCLOAK_BASE_URL=https://sso.yourdomain.com

# OAuth2 Proxy Configuration
OAUTH2_PROXY_COOKIE_SECRET=your-32-character-random-string-here

# Domain Configuration
DOCS_DOMAIN=docs.yourdomain.com
DOCS_PORT=8080

# Security Settings
COOKIE_SECURE=false  # Set to true in production with HTTPS
SESSION_TIMEOUT=24h
REFRESH_INTERVAL=1h

# Access Control
ALLOWED_EMAIL_DOMAINS=*
ALLOWED_GROUPS=docs-readers,developers,architects,administrators

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_AUTH_LOGGING=true